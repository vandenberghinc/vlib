{
    "compilerOptions": {
        "target": "es2023",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "declaration": true,
        "declarationDir": "./dist/esm",
        "outDir": "./dist/esm",
        "sourceMap": true,
        "rootDir": "./src/",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowJs": true,
        "checkJs": false,
        "noImplicitAny": false,
    },
    "include": [
        "src/**/*",
        "test/**/*",
    ],
}