{
    "compilerOptions": {
        "rootDir": "./src/",
        "outDir": "./dist/web",
        "declarationDir": "./dist/web",
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "bundler",
        "lib": [
            "ES2022",
            "DOM"
        ],
        "sourceMap": true,
        "declaration": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowJs": true,
        "checkJs": false,
        "noImplicitAny": false,
        "paths": {
            "@vlib": [
                "./src/vlib/index.web.ts"
            ],
            "@vlib/*": [
                "./src/vlib/*"
            ],
        },
    },
    "include": [
        "src/vlib/index.web.ts",
    ],
    "exclude": [
        "**/unit_tests/**/*",
    ],
}