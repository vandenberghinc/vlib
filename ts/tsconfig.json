{
    "compilerOptions": {
        "rootDir": "./src/",
        "outDir": "./dist/esm",
        "declarationDir": "./dist/esm",
        "target": "es2023",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "declaration": true,
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowJs": true,
        "checkJs": false,
        "noImplicitAny": false,
        "paths": {
            "@vlib": [
                "./src/vlib/index.ts"
            ],
            "@vlib/*": [
                "./src/vlib/*"
            ],
            "@vrepo": [
                "./src/vrepo/index.ts"
            ],
            "@vrepo/*": [
                "./src/vrepo/*"
            ],
            "@vtest": [
                "./src/vtest/index.ts"
            ],
            "@vtest/*": [
                "./src/vtest/*"
            ],
            "@vts": [
                "./src/vts/index.ts"
            ],
            "@vts/*": [
                "./src/vts/*"
            ],
        },
        // "noImplicitAny": true,
        // "suppressImplicitAnyIndexErrors": false
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "**/dist",
        "**/node_modules",
    ]
}